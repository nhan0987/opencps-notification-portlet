<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>opencps-notification</portlet-name>
		<display-name>Opencps Notification</display-name>
		<portlet-class>org.opencps.notification.portlet.NotificationPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/portlets/notifications/dockbar_notifications/view.jsp</value>
		</init-param>
		<init-param>
			<name>template-path</name>
			<value>/html/portlets/notifications/</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Opencps Notification</title>
			<short-title>Opencps Notification</short-title>
			<keywords>Opencps Notification</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>